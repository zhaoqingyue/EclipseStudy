<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:layout="@layout/oschina_preference_category"
        android:title="账号管理" >
        <Preference
            android:key="account"
            android:layout="@layout/oschina_preference"
            android:title="用户登录" />
        <Preference
            android:key="myinfo"
            android:layout="@layout/oschina_preference"
            android:summary="我的信息、收藏、粉丝..."
            android:title="我的资料" />
    </PreferenceCategory>
    <PreferenceCategory
        android:layout="@layout/oschina_preference_category"
        android:title="功能设置" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="httpslogin"
            android:layout="@layout/oschina_preference"
            android:summary="当前以HTTP登录"
            android:title="HTTPS登录" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="loadimage"
            android:layout="@layout/oschina_preference"
            android:summary="页面加载图片 (默认在WIFI网络下加载图片)"
            android:title="加载图片" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="scroll"
            android:layout="@layout/oschina_preference"
            android:summary="已关闭左右滑动"
            android:title="左右滑动" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="voice"
            android:layout="@layout/oschina_preference"
            android:summary="已开启提示声音"
            android:title="提示声音" />
    </PreferenceCategory>
    <PreferenceCategory
        android:layout="@layout/oschina_preference_category"
        android:title="缓存设置" >
        <Preference
            android:key="cache"
            android:layout="@layout/oschina_preference"
            android:summary="0KB"
            android:title="清除缓存" />
    </PreferenceCategory>
    <PreferenceCategory
        android:layout="@layout/oschina_preference_category"
        android:title="其他" >
        <Preference
            android:key="feedback"
            android:layout="@layout/oschina_preference"
            android:summary="用户意见反馈"
            android:title="意见反馈" />
        <Preference
            android:key="update"
            android:layout="@layout/oschina_preference"
            android:summary="检测是否有新版本"
            android:title="新版本检测" />
        <Preference
            android:key="about"
            android:layout="@layout/oschina_preference"
            android:summary="关于我们、版权信息"
            android:title="关于我们" />
    </PreferenceCategory>

</PreferenceScreen>