<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/gifts_birthday_item_avatar"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_margin="8dip"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/gifts_birthday_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#3fffffff"
        android:shadowDx="0.0"
        android:shadowDy="1.0"
        android:shadowRadius="1.0"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gifts_birthday_item_date"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_weight="1"
        android:shadowColor="#3fffffff"
        android:shadowDx="0.0"
        android:shadowDy="1.0"
        android:shadowRadius="1.0"
        android:textColor="#999999"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/gifts_birthday_item_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dip"
        android:background="@drawable/menu_kaixin_gift_send" />

</LinearLayout>