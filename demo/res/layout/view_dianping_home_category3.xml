<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp" >

        <TextView
            android:id="@+id/id_home_nav_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_car"
            android:gravity="center"
            android:text="爱车"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_home_nav_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_discount"
            android:gravity="center"
            android:text="优惠"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_home_nav_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_show"
            android:gravity="center"
            android:text="演出"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_home_nav_coffee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_coffee"
            android:gravity="center"
            android:text="咖啡厅"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:visibility="visible" >

        <TextView
            android:id="@+id/id_home_nav_pet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_pet"
            android:gravity="center"
            android:text="宠物"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_home_nav_viewpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_viewpoint"
            android:gravity="center"
            android:text="景点"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_home_nav_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_hospital"
            android:gravity="center"
            android:text="医院"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_home_nav_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_more"
            android:gravity="center"
            android:text="全部分类"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>