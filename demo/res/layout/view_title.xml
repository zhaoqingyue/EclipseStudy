<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48.0dip"
    android:background="@color/bar_color" >

    <TextView
        android:id="@+id/id_title_left_text"
        style="@style/text_title_style"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:text="@string/app_name"
        android:textSize="15sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/id_title_left_img"
        android:layout_width="40dp"
        android:layout_height="22dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_back"
        android:visibility="gone" />

    <TextView
        android:id="@+id/id_title_text"
        style="@style/text_title_style"
        android:layout_centerInParent="true"
        android:text="@string/app_name" />

    <ImageView
        android:id="@+id/id_title_right_img"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/app_name"
        android:visibility="gone" />
    
    <ToggleButton
        android:id="@+id/id_title_wifi_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/wifi_toggle_butn_selector"
        android:checked="true"
        android:text=""
        android:textOff=""
        android:textOn="" 
        android:visibility="gone" />

    <TextView
        android:id="@+id/id_title_right_text"
        style="@style/text_title_style"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:textSize="20sp" />

</RelativeLayout>