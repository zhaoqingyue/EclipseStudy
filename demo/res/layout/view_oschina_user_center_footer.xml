<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/oschina_bar_bg_n"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <RadioButton
        android:id="@+id/user_center_footbar_relation"
        style="@style/oschina_user_center_footbar"
        android:layout_marginLeft="0dip"
        android:drawableLeft="@drawable/oschina_bar_relation_add"
        android:text="加关注" />

    <ImageView
        style="@style/oschina_footbar_line"
        android:contentDescription="@string/app_name"
        android:src="@drawable/oschina_bar_line" />

    <RadioButton
        android:id="@+id/user_center_footbar_message"
        style="@style/oschina_user_center_footbar"
        android:layout_marginLeft="0dip"
        android:drawableLeft="@drawable/oschina_bar_mail"
        android:text="留言" />

    <ImageView
        style="@style/oschina_footbar_line"
        android:contentDescription="@string/app_name"
        android:src="@drawable/oschina_bar_line" />

    <RadioButton
        android:id="@+id/user_center_footbar_atme"
        style="@style/oschina_user_center_footbar"
        android:layout_marginLeft="0dip"
        android:drawableLeft="@drawable/oschina_bar_atme"
        android:text="提到Ta" />

</LinearLayout>