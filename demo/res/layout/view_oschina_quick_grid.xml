<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:id="@+id/gdi_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gdi_arrow_up"
        android:layout_marginTop="-1px"
        android:background="@null"
        android:visibility="gone" />

    <GridView
        android:id="@+id/gdi_grid"
        style="@style/GreenDroid.Widget.QuickAction.Grid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gdi_header"
        android:layout_marginTop="-1px" />

    <FrameLayout
        android:id="@+id/gdi_footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gdi_grid"
        android:background="@null"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/gdi_arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:src="@drawable/oschina_quick_action_arrow_up" />

    <ImageView
        android:id="@+id/gdi_arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gdi_footer"
        android:layout_marginTop="-1px"
        android:contentDescription="@string/app_name"
        android:src="@drawable/oschina_quick_action_bar_arrow_down" />

</RelativeLayout>