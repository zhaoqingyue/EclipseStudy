<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp" >

    <View
        android:id="@+id/billnotes_bill_link"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:background="#d9d9d9" />

    <ImageView
        android:id="@+id/billnotes_bill_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/billnotes_bill_link"
        android:layout_centerHorizontal="true"
        android:background="@drawable/billnotes_mybill_icon12"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/billnotes_bill_right_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/billnotes_bill_icon"
        android:text="网购***"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/billnotes_bill_left_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/billnotes_bill_icon"
        android:text="网购***"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:visibility="visible" />

</RelativeLayout>