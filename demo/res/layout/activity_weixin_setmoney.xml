<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include layout="@layout/view_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp" >

        <RelativeLayout
            android:id="@+id/view_user"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <ImageView
                android:id="@+id/id_setmoney_head"
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/weixin_me_head" />

            <TextView
                android:id="@+id/id_setmoney_id"
                style="@style/text_style2"
                android:layout_width="fill_parent"
                android:layout_below="@+id/id_setmoney_head"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/weixin_me_chat_id"
                android:textSize="14.0dip" />
        </RelativeLayout>

        <EditText
            android:id="@+id/id_setmoney_money"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_bg_selector"
            android:gravity="center"
            android:hint="@string/pay_money"
            android:singleLine="true"
            android:textColorHint="#DDDDDD"
            android:textSize="16sp" />

        <Button
            android:id="@+id/id_setmoney_pay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/setmoney_button_bg_selector"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="@string/setmoney_pay"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>