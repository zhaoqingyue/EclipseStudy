<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E3132" >

    <include
        android:id="@+id/id_mycode_bar"
        layout="@layout/view_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="30dp"
        android:background="@drawable/mycode_bg_selector"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <RelativeLayout
            android:id="@+id/id_mycode_user"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" >

            <ImageView
                android:id="@+id/id_mycode_head"
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/weixin_me_head" />

            <TextView
                android:id="@+id/id_mycode_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_toRightOf="@+id/id_mycode_head"
                android:text="@string/app_name"
                android:textSize="18.0dip" />

            <TextView
                android:id="@+id/id_mycode_id"
                style="@style/text_style2"
                android:layout_below="@+id/id_mycode_name"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/id_mycode_head"
                android:text="@string/weixin_me_chat_id"
                android:textSize="14.0dip" />

            <ImageView
                android:id="@+id/id_mycode_sex"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@+id/id_mycode_name"
                android:contentDescription="@string/app_name"
                android:src="@drawable/weixin_me_sex_female" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/id_mycode_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/pay_default_image" />

        <TextView
            style="@style/text_style2"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/mycode_text"
            android:textSize="14.0dip" />
    </LinearLayout>

</RelativeLayout>