<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_menu_headline_title_bar"
    android:background="@drawable/menu_headline_head_bg_titlebar"
    android:layout_width="fill_parent"
    android:layout_height="44.0dip" >

    <ImageView
        android:id="@+id/id_menu_headline_head_category"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/menu_headline_head_category_bg"
        android:padding="0.0dip"
        android:src="@drawable/menu_headline_head_category"
        android:visibility="gone"
        android:contentDescription="@string/app_name" />

    <FrameLayout
        android:id="@+id/id_menu_headline_head_top_container"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip" >

        <ImageView
            android:id="@+id/id_menu_headline_head_top_head"
            android:layout_width="28.0dip"
            android:layout_height="28.0dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/menu_headline_head_top_bg"
            android:padding="2.0dip"
            android:src="@drawable/menu_headline_head_top_head_default"
            android:scaleType="fitXY"
            android:contentDescription="@string/app_name" />
    </FrameLayout>

    <TextView
        android:id="@+id/id_menu_headline_head_titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-17.0dip"
        android:layout_marginTop="5.0dip"
        android:layout_toRightOf="@id/id_menu_headline_head_top_container"
        android:textColor="#ffcc3131"
        android:textSize="10.0sp"
        android:gravity="center"
        android:background="@drawable/menu_headline_head_titlebar"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/id_menu_headline_head_top_more"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/menu_headline_head_top_more"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/id_menu_headline_head_top_right_count"
        android:gravity="center"
        android:textColor="#ffcc3131"
        android:textSize="10.0sp"
        android:layout_width="15.0dip"
        android:layout_height="15.0dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8.0dip"
        android:layout_marginTop="5.0dip"
        android:background="@drawable/menu_headline_head_titlebar"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/id_menu_headline_head_click_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="13.0dip" >

        <FrameLayout
            android:id="@+id/id_menu_headline_head_title_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/id_menu_headline_head_title_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/menu_headline_head_title_icon" 
                android:contentDescription="@string/app_name"/>

            <TextView
                android:id="@+id/id_menu_headline_head_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="1.5dip"
                android:paddingLeft="6.0dip"
                android:paddingRight="6.0dip"
                android:textSize="20.0sp"
                android:textColor="#ffffffff"
                android:visibility="gone" />
        </FrameLayout>

        <ImageView
            android:id="@+id/id_menu_headline_head_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/id_menu_headline_head_title_parent"
            android:padding="3.0dip"
            android:src="@drawable/menu_headline_head_refresh"
            android:contentDescription="@string/app_name" />

        <ProgressBar
            android:id="@+id/id_menu_headline_head_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/id_menu_headline_head_title_parent"
            android:indeterminateOnly="true"
            android:minHeight="13.0dip"
            android:minWidth="13.0dip"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/id_menu_headline_head_progress_night"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/id_menu_headline_head_title_parent"
            android:indeterminateOnly="true"
            android:minHeight="13.0dip"
            android:minWidth="13.0dip"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>