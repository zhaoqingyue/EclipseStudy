<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" >

    <RelativeLayout
        android:id="@+id/id_slidemenu_right_home_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/id_slidemenu_right_titlebar_layout"
            android:layout_width="wrap_content"
            android:layout_height="44.0dip"
            android:orientation="horizontal"
            android:paddingLeft="12.0dip" >

            <TextView
                android:id="@+id/id_slidemenu_right_titlebar_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textSize="16.0sp"
                android:textColor="#ffc3c3c3"
                android:text="@string/menu_headline_slidemenu_right_tip_no_login" />

            <ImageView
                android:id="@+id/id_slidemenu_right_titlebar_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30.0dip"
                android:layout_toRightOf="@id/id_slidemenu_right_titlebar_name"
                android:scaleType="center"
                android:src="@drawable/menu_headline_right_refresh"
                android:contentDescription="@string/app_name" />

            <ProgressBar
                android:id="@+id/id_slidemenu_right_titlebar_progressbar"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80.0dip"
                android:layout_toRightOf="@id/id_slidemenu_right_titlebar_name"
                android:visibility="visible" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/id_slidemenu_right_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12.0dip"
            android:scaleType="center"
            android:src="@drawable/menu_headline_right_attention"
            android:contentDescription="@string/app_name" />
        
        <TextView
            android:id="@+id/id_slidemenu_right_count"
            android:textColor="#ffcc3131"
            android:textSize="10.0sp"
            android:gravity="center"
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@drawable/menu_headline_right_attention_count" />

        <View
            android:id="@+id/id_slidemenu_right_divider_line"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_below="@id/id_slidemenu_right_titlebar_layout"
            android:background="#ff303030" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_slidemenu_right_logout_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal" >

        <LinearLayout
            android:id="@+id/id_slidemenu_right_logout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#ffbaf2fe"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/id_slidemenu_right_qzone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.0dip"
                android:clickable="true"
                android:src="@drawable/menu_headline_right_item_qq"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/id_slidemenu_right_sina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:clickable="true"
                android:src="@drawable/menu_headline_right_item_sina"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/id_slidemenu_right_tencent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:clickable="true"
                android:src="@drawable/menu_headline_right_item_tencent"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="37.0dip"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/id_slidemenu_right_renren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:clickable="true"
                    android:src="@drawable/menu_headline_right_item_renren"
                    android:contentDescription="@string/app_name" />

                <ImageView
                    android:id="@+id/id_slidemenu_right_kaixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/menu_headline_right_item_kaixin"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>
        </LinearLayout>

        <!-- <ImageView
            android:id="@+id/id_slidemenu_right_no_login_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/id_slidemenu_right_logout"
            android:scaleType="fitXY"
            android:src="@drawable/menu_headline_slidemenu_right_introduce"
            android:contentDescription="@string/app_name" /> -->

        <TextView
            android:id="@+id/id_slidemenu_right_no_login_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dip"
            android:layout_centerHorizontal="true"
            android:text="@string/menu_headline_slidemenu_right_hint_text"
            android:textColor="#ff2bb2cf"
            android:textSize="13.0sp" /> 
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_slidemenu_right_login_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/id_slidemenu_right_home_layout" >

        <FrameLayout
            android:id="@+id/id_slidemenu_right_fragment_friend"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

</RelativeLayout>