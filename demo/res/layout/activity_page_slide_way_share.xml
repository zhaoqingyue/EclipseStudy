<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp"
        android:background="@color/blue1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="20dp" >

            <ImageView
                android:id="@+id/id_way_share_item0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:scaleType="center"
                android:src="@drawable/page_slide_way_logo_tencentweibo" />

            <ImageView
                android:id="@+id/id_way_share_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:scaleType="center"
                android:src="@drawable/page_slide_way_logo_sinaweibo" />

            <ImageView
                android:id="@+id/id_way_share_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:scaleType="center"
                android:src="@drawable/page_slide_way_logo_renren" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <ImageView
                android:id="@+id/id_way_share_item3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:scaleType="center"
                android:src="@drawable/page_slide_way_logo_qq" />

            <ImageView
                android:id="@+id/id_way_share_item4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:scaleType="center"
                android:src="@drawable/page_slide_way_logo_qzone" />

            <ImageView
                android:id="@+id/id_way_share_item5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:scaleType="center"
                android:src="@drawable/page_slide_way_logo_wechatmoments" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp" >

            <ImageView
                android:id="@+id/id_way_share_item6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:scaleType="center"
                android:src="@drawable/page_slide_way_logo_wechat" />

            <ImageView
                android:id="@+id/id_way_share_item7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:scaleType="center"
                android:src="@drawable/page_slide_way_logo_kaixin" />

            <ImageView
                android:id="@+id/id_way_share_item8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:scaleType="center"
                android:src="@drawable/page_slide_way_logo_douban" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>