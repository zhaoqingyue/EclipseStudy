<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp" >

        <TextView
            android:id="@+id/id_home_nav_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_footer"
            android:gravity="center"
            android:text="足疗按摩"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_home_nav_ktv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_ktv"
            android:gravity="center"
            android:text="KTV"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_home_nav_sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_sport"
            android:gravity="center"
            android:text="运动健身"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_home_nav_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_shop"
            android:gravity="center"
            android:text="购物"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:visibility="visible" >

        <TextView
            android:id="@+id/id_home_nav_house"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_house"
            android:gravity="center"
            android:text="到家"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_home_nav_marry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_marry"
            android:gravity="center"
            android:text="结婚"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_home_nav_baby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_baby"
            android:gravity="center"
            android:text="亲子"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_home_nav_fitting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_fitting"
            android:gravity="center"
            android:text="装修"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>