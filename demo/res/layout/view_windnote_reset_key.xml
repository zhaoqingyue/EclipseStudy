<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/transparent"
            android:text="@string/windnote_key_old"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/key_old"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/windnote_txt_shape"
            android:hint="@string/windnote_key_length"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/transparent"
            android:text="@string/windnote_key_new"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/key_new"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/windnote_txt_shape"
            android:hint="@string/windnote_key_length"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/transparent"
            android:text="@string/windnote_key_again"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/key_new_again"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/windnote_txt_shape"
            android:hint="@string/windnote_key_length"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </TableRow>

</TableLayout>