<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/photoshare_item_image"
        android:layout_width="180dip"
        android:layout_height="220dip"
        android:background="@drawable/menu_kaixin_picture_frame"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name" />

    <Button
        android:id="@+id/photoshare_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dip"
        android:paddingRight="5dip"
        android:layout_alignRight="@+id/photoshare_item_image"
        android:background="@drawable/menu_kaixin_delet_pressed" />

</RelativeLayout>