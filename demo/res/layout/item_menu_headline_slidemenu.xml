<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_slidemenu_item_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_headline_item_news_bg" >

    <LinearLayout
        android:id="@+id/id_slidemenu_item_article_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingLeft="15.0dip"
        android:paddingRight="8.0dip"
        android:paddingTop="10.0dip" >

        <RelativeLayout
            android:id="@+id/id_slidemenu_item_article_top_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/id_slidemenu_item_article_top_title_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="7.0dip" >

                <ImageView
                    android:id="@+id/id_slidemenu_item_article_top_title_right_image"
                    android:layout_width="86.0dip"
                    android:layout_height="60.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="4.0dip"
                    android:layout_marginTop="3.0dip"
                    android:background="@drawable/menu_headline_item_right_image"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/id_slidemenu_item_article_top_title_video"
                    android:layout_width="86.0dip"
                    android:layout_height="60.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="4.0dip"
                    android:layout_marginTop="3.0dip"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/menu_headline_item_video"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/id_slidemenu_item_article_top_title_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/id_slidemenu_item_article_top_title_right_image"
                    android:textColor="@color/menu_headline_slidemenu_item_title_color"
                    android:textSize="17.0sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/id_slidemenu_item_article_info_layout"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:layout_below="@id/id_slidemenu_item_article_top_title_layout"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/id_slidemenu_item_article_info_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.0"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#ff999999"
                    android:textSize="11.0sp" />

                <TextView
                    android:id="@+id/id_slidemenu_item_article_info_local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:background="@drawable/menu_headline_item_local_bg"
                    android:paddingLeft="2.0dip"
                    android:paddingRight="2.0dip"
                    android:textColor="#ffffffff"
                    android:textSize="10.0sp" />

                <View
                    android:layout_width="0.0dip"
                    android:layout_height="1.0dip"
                    android:layout_weight="1.0"
                    android:minWidth="8.0dip" />

                <TextView
                    android:id="@+id/id_slidemenu_item_article_info_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.0"
                    android:textColor="#ff999999"
                    android:textSize="11.0sp" />

                <TextView
                    android:id="@+id/id_slidemenu_item_article_info_publish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="0.0"
                    android:paddingRight="8.0dip"
                    android:textColor="#ff999999"
                    android:textSize="11.0sp" />

                <View
                    android:id="@+id/id_slidemenu_item_article_info_padding_view"
                    android:layout_width="25.0dip"
                    android:layout_height="1.0dip"
                    android:layout_weight="0.0" />
            </LinearLayout>

            <View
                android:id="@+id/id_slidemenu_item_article_popicon_anchor"
                android:layout_width="1.0dip"
                android:layout_height="5.0dip"
                android:layout_alignBottom="@id/id_slidemenu_item_article_top_title_layout"
                android:layout_alignParentRight="true" />

            <ImageView
                android:id="@+id/id_slidemenu_item_article_pop_icon"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_alignBottom="@id/id_slidemenu_item_article_info_layout"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/app_name"
                android:duplicateParentState="false"
                android:scaleType="center"
                android:src="@drawable/menu_headline_item_pop_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/id_slidemenu_item_abstract"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4.0dip"
            android:layout_marginRight="7.0dip"
            android:lineSpacingExtra="4.0dip"
            android:textColor="@color/menu_headline_slidemenu_item_abstract_color"
            android:textSize="13.0sp" />

        <LinearLayout
            android:id="@+id/id_slidemenu_item_image_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6.0dip"
            android:orientation="horizontal"
            android:paddingRight="8.0dip" >

            <ImageView
                android:id="@+id/id_slidemenu_item_image0"
                android:layout_width="86.0dip"
                android:layout_height="60.0dip"
                android:background="@drawable/menu_headline_item_right_image"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="0.0dip"
                android:layout_height="1.0dip"
                android:layout_weight="1.0" />

            <ImageView
                android:id="@+id/id_slidemenu_item_image1"
                android:layout_width="86.0dip"
                android:layout_height="60.0dip"
                android:background="@drawable/menu_headline_item_right_image"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="0.0dip"
                android:layout_height="1.0dip"
                android:layout_weight="1.0" />

            <ImageView
                android:id="@+id/id_slidemenu_item_image2"
                android:layout_width="86.0dip"
                android:layout_height="60.0dip"
                android:background="@drawable/menu_headline_item_right_image"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <ImageView
            android:id="@+id/id_slidemenu_item_large_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6.0dip"
            android:background="@drawable/menu_headline_item_large_image"
            android:contentDescription="@string/app_name"
            android:paddingRight="7.0dip"
            android:scaleType="fitXY" />
    </LinearLayout>

    <ImageView
        android:id="@+id/id_slidemenu_item_mark"
        android:layout_width="15.0dip"
        android:layout_height="15.0dip"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/id_slidemenu_item_comment_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/id_slidemenu_item_article_layout"
        android:layout_marginBottom="8.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:background="@drawable/menu_headline_item_comment_bg"
        android:duplicateParentState="false"
        android:paddingBottom="14.0dip"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:paddingTop="8.0dip" >

        <TextView
            android:id="@+id/id_slidemenu_item_comment_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="2.0dip"
            android:maxLines="3"
            android:textColor="#ff747474"
            android:textSize="12.0sp" />

        <ImageView
            android:id="@+id/id_slidemenu_item_comment_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_right"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/id_slidemenu_item_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_alignParentBottom="true"
        android:background="#ffdddddd" />

    <TextView
        android:id="@+id/id_slidemenu_item_favorite_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15.0dip"
        android:background="@drawable/menu_headline_item_favorite_delete"
        android:duplicateParentState="false"
        android:gravity="center"
        android:paddingBottom="6.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="6.0dip"
        android:text="@string/menu_headline_slidemenu_item_favorite_delete"
        android:textColor="@color/white"
        android:textSize="15.0sp"
        android:visibility="gone" />

</RelativeLayout>