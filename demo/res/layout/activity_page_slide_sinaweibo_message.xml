<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/page_slide_sinaweibo_title_bg" >

        <TextView
            android:id="@+id/id_sinaweibo_message_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="消息"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_sinaweibo_message_at"
        android:layout_width="match_parent"
        android:layout_height="74dp" >

        <ImageView
            android:id="@+id/id_sinaweibo_message_at_icon"
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/page_slide_sinaweibo_message_at" />

        <TextView
            android:id="@+id/id_sinaweibo_message_at_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/id_sinaweibo_message_at_icon"
            android:padding="8dp"
            android:text="提到我的"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/page_slide_sinaweibo_icon_arrow" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#f0f0f0" />

    <RelativeLayout
        android:id="@+id/id_sinaweibo_message_comment"
        android:layout_width="match_parent"
        android:layout_height="74dp" >

        <ImageView
            android:id="@+id/id_sinaweibo_message_comment_icon"
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/page_slide_sinaweibo_message_comment" />

        <TextView
            android:id="@+id/id_sinaweibo_message_comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/id_sinaweibo_message_comment_icon"
            android:padding="8dp"
            android:text="评论"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/page_slide_sinaweibo_icon_arrow" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#f0f0f0" />

    <RelativeLayout
        android:id="@+id/id_sinaweibo_message_good"
        android:layout_width="match_parent"
        android:layout_height="74dp" >

        <ImageView
            android:id="@+id/id_sinaweibo_message_good_icon"
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/page_slide_sinaweibo_message_good" />

        <TextView
            android:id="@+id/id_sinaweibo_message_good_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/id_sinaweibo_message_good_icon"
            android:padding="8dp"
            android:text="赞"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/page_slide_sinaweibo_icon_arrow" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#f0f0f0" />

    <RelativeLayout
        android:id="@+id/id_sinaweibo_message_box"
        android:layout_width="match_parent"
        android:layout_height="74dp" >

        <ImageView
            android:id="@+id/id_sinaweibo_message_box_icon"
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/page_slide_sinaweibo_message_box" />

        <TextView
            android:id="@+id/id_sinaweibo_message_box_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/id_sinaweibo_message_box_icon"
            android:padding="8dp"
            android:text="通告"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/page_slide_sinaweibo_icon_arrow" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#f0f0f0" />

</LinearLayout>