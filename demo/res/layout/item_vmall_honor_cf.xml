<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/grid_commonfitting_ivprdPicUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:background="@drawable/vmall_home_star_shape"
        android:contentDescription="@string/app_name"
        android:padding="1dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/grid_commonfitting_tvprdName"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/grid_commonfitting_ivprdPicUrl"
        android:padding="5dp"
        android:singleLine="true"
        android:text="AM180主动降噪立体声耳机"
        android:textColor="#000000"
        android:textSize="14sp" />

</RelativeLayout>