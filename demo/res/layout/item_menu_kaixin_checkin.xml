<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <include
        android:id="@+id/checkin_item_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/view_menu_kaixin_checkin_top" />

    <include
        android:id="@+id/checkin_item_mid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/view_menu_kaixin_checkin_mid" />

    <include
        android:id="@+id/checkin_item_more"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/view_menu_kaixin_checkin_more" />

    <include
        android:id="@+id/checkin_item_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/view_menu_kaixin_checkin_bottom" />

</LinearLayout>