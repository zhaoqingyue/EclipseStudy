<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp" >

        <TextView
            android:id="@+id/id_home_nav_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_food"
            android:gravity="center"
            android:text="美食"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_home_nav_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_movie"
            android:gravity="center"
            android:text="电影"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_home_nav_relax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_relax"
            android:gravity="center"
            android:text="休闲娱乐"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_home_nav_beauty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_beauty"
            android:gravity="center"
            android:text="丽人"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:visibility="visible" >

        <TextView
            android:id="@+id/id_home_nav_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_group"
            android:gravity="center"
            android:text="闪惠团购"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_home_nav_takeaway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_takeaway"
            android:gravity="center"
            android:text="外卖"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_home_nav_hotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_hotel"
            android:gravity="center"
            android:text="酒店"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_home_nav_tour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/dianping_nav_tour"
            android:gravity="center"
            android:text="周边游"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>